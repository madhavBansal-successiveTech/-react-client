{
  "name": "training",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:c": "react-scripts test --coverage",
    "lint":  "eslint ./src** --ext .js --ext .jsx",
    "lint-fix": "eslint ./src** --ext .js --ext .jsx --fix",
    "commit": "npx git-cz"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "hooks": {
    "precommit": "npm run lint && npm run test:c",
    "prepush": "npm run lint && npm run test:c"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "husky": "^1.3.1"
  }
}
